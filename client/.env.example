# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_VERSION=1.0.0

# Security Configuration
REACT_APP_JWT_EXPIRY=15m
REACT_APP_REFRESH_TOKEN_EXPIRY=7d
REACT_APP_MFA_ENABLED=true
REACT_APP_PASSWORD_MIN_LENGTH=12
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_LOCKOUT_DURATION=900000

# Cookie Settings
REACT_APP_COOKIE_DOMAIN=localhost
REACT_APP_COOKIE_SECURE=true
REACT_APP_COOKIE_SAMESITE=strict

# Rate Limiting
REACT_APP_RATE_LIMIT_WINDOW=900000
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
REACT_APP_MONITORING_ENDPOINT=https://your-monitoring-service.com/api
REACT_APP_MONITORING_API_KEY=your-monitoring-api-key
REACT_APP_ERROR_THRESHOLD=10
REACT_APP_RESPONSE_TIME_THRESHOLD=5000

# Encryption Keys (DO NOT COMMIT ACTUAL KEYS)
REACT_APP_ENCRYPTION_KEY=your-encryption-key
REACT_APP_ENCRYPTION_IV=your-encryption-iv

# CORS Configuration
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000
REACT_APP_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH

# Content Security Policy
REACT_APP_CSP_CONNECT_SRC=http://localhost:* https://ministryofjustice-c0344.firebaseio.com
REACT_APP_CSP_STYLE_SRC=https://fonts.googleapis.com
REACT_APP_CSP_FONT_SRC=https://fonts.gstatic.com

# Backup Configuration
REACT_APP_BACKUP_FREQUENCY=86400000
REACT_APP_BACKUP_RETENTION=2592000000

# Feature Flags
REACT_APP_ENABLE_MFA=true
REACT_APP_ENABLE_PASSWORD_STRENGTH=true
REACT_APP_ENABLE_RATE_LIMITING=true
REACT_APP_ENABLE_ERROR_MONITORING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Development Settings (Disable in Production)
REACT_APP_DISABLE_SECURITY_HEADERS=false
REACT_APP_ENABLE_DEBUG_LOGGING=false 